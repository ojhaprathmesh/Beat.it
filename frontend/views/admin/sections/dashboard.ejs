<!-- Dashboard Section -->
<div class="admin-dashboard">
    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Songs</h3>
            <div class="stat-value" id="total-songs">0</div>
            <div class="stat-subtitle">In your library</div>
        </div>
        <div class="stat-card">
            <h3>Total Users</h3>
            <div class="stat-value" id="total-users">0</div>
            <div class="stat-subtitle">Registered accounts</div>
        </div>
        <div class="stat-card">
            <h3>Storage Used</h3>
            <div class="stat-value" id="storage-used">0 MB</div>
            <div class="stat-subtitle">Of available space</div>
        </div>
        <div class="stat-card">
            <h3>Most Played</h3>
            <div class="stat-value" id="most-played">--</div>
            <div class="stat-subtitle">Top song</div>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-chart-line"></i> Recent Activity</h2>
        </div>
        <div id="recent-activity">
            <div class="admin-loading">Loading activity data...</div>
        </div>
    </div>
    
    <!-- Top Played Songs Chart -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-music"></i> Top Played Songs</h2>
        </div>
        <div class="chart-wrapper">
            <canvas id="top-songs-chart"></canvas>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-bolt"></i> Quick Actions</h2>
        </div>
        <div class="admin-actions-grid">
            <button class="admin-btn admin-btn-primary" onclick="window.location.href='/admin/songs/add'">
                <i class="fas fa-plus"></i> Add New Song
            </button>
            <button class="admin-btn admin-btn-primary" onclick="window.location.href='/admin/users/add'">
                <i class="fas fa-user-plus"></i> Add New User
            </button>
            <button class="admin-btn admin-btn-primary" onclick="window.location.href='/admin/artists/add'">
                <i class="fas fa-user-plus"></i> Add New Artist
            </button>
            <button class="admin-btn admin-btn-primary" onclick="window.location.href='/admin/albums/add'">
                <i class="fas fa-compact-disc"></i> Add New Album
            </button>
        </div>
    </div>
</div>

<style>
    .admin-actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 20px;
    }
    
    .admin-actions-grid .admin-btn {
        width: 100%;
        text-align: center;
        padding: 15px;
    }
    
    .admin-actions-grid .admin-btn i {
        margin-right: 8px;
    }
</style> 