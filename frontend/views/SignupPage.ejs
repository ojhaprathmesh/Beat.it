<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Join the music revolution with Beat.it! Sign up now to enjoy an amazing experience.">
    <title>Beat.it</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/browserIcon.ico" />

    <link rel="stylesheet" href="/styles/font.css" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="/styles/form.css" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="/styles/colors.css" media="print" onload="this.media='all'">

    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, var(--primary-bg) 0%, #1B263B 100%);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        .signup {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

        .graphics-signup {
            display: none;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh;
            position: relative;
            flex: 1;
        }

        #brand-tag {
            color: white;
            font-size: clamp(28px, 3vw, 40px);
            position: absolute;
            left: 40px;
            top: 125px;
            max-width: 395px;
        }

        .image-container {
            position: absolute;
            z-index: 1;
        }

        #image-container-1 {
            z-index: 0;
            opacity: 0.6;
        }

        #image-container-2 {
            bottom: -4px;
            left: 0;
        }

        #image-container-3 {
            right: 0;
            top: 50%;
            transform: translateY(-50%);
        }

        .whiteFrame-signup {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            width: min(90%, 450px);
            margin: auto;
            padding: 40px;
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 2;
        }

        .form {
            width: 100%;
        }

        .form-heading {
            text-align: center;
            margin-bottom: 20px;
        }

        .main-heading {
            font-size: clamp(28px, 5vw, 36px);
            color: var(--primary-bg);
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        @media (min-width: 1024px) {
            .graphics-signup {
                display: flex;
            }

            .whiteFrame-signup {
                width: 450px;
                margin: 0;
                margin-right: 5%;
                align-self: center;
            }

            .signup {
                overflow: hidden;
            }
        }

        @media (max-width: 480px) {
            .whiteFrame-signup {
                padding: 30px 20px;
            }
        }
    </style>
</head>

<body>
    <main class="signup">
        <section class="graphics-signup">
            <div class="font-syne-mono" id="brand-tag">
                Join us in the music revolution and just Beat it!
            </div>

            <div class="image-container" id="image-container-1">
                <img src="/assets/signup/Graphic%20Design.webp" alt="Graphic Design Blob" width="725" height="1024">
            </div>

            <div class="image-container" id="image-container-2">
                <img src="/assets/signup/Singing%20Boy.webp" alt="Singing Boy" width="330" height="382">
            </div>

            <div class="image-container" id="image-container-3">
                <img src="/assets/signup/DJ%20Girl.webp" alt="DJ Girl" width="288" height="276">
            </div>
        </section>

        <section class="whiteFrame-signup">
            <form class="form font-inter" id="signup-form" method="POST">
                <section class="form-heading">
                    <h1 class="main-heading">Create Account</h1>
                </section>

                <section class="form-inputs">
                    <div class="input-container name-input first-name">
                        <input type="text" class="box" id="first-name-label" name="firstName" required>
                        <label for="first-name-label">First Name</label>
                    </div>

                    <div class="input-container name-input last-name">
                        <input type="text" class="box" id="last-name-label" name="lastName">
                        <label for="last-name-label">Last Name</label>
                    </div>

                    <div class="input-container email">
                        <input type="email" class="box" id="email-label" name="email" required autocomplete="username">
                        <label for="email-label">Email</label>
                    </div>

                    <div class="input-container password">
                        <input type="password" class="box" id="password-label" name="pass-create" required
                            autocomplete="new-password">
                        <label for="password-label">Password</label>
                    </div>

                    <div class="input-container confirm-password">
                        <input type="password" class="box" id="confirm-password-label" name="pass-confirm" required
                            autocomplete="new-password">
                        <label for="confirm-password-label">Confirm Password</label>
                    </div>

                    <button class="form-btn font-inter" id="create-account" type="submit">
                        Create Account
                    </button>
                </section>

                <div class="font-inter redirect">
                    <div>
                        <p>Already have an account? </p>
                        <p>Login</p>
                    </div>
                </div>
            </form>
        </section>
    </main>

    <script src="/scripts/utility/loading.js"></script>

    <script type="module" src="/scripts/handlers/formHandler.js" defer></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const redirect = document.querySelector(".redirect p:nth-child(2)");
            redirect.addEventListener("click", () => {
                window.location.href = "/login";
            });
        });
    </script>
</body>

</html>