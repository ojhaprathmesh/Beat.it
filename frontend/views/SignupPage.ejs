<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Join the music revolution with Beat.it! Sign up now to enjoy an amazing experience.">
    <title>Beat.it</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/browserIcon.ico" />

    <link rel="stylesheet" href="/styles/font.css">
    <link rel="stylesheet" href="/styles/colors.css">
    <link rel="stylesheet" href="/styles/modern-theme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <div class="animated-background">
        <!-- Adding floating music notes -->
        <div class="note"><i class="fas fa-music"></i></div>
        <div class="note"><i class="fas fa-note"></i></div>
        <div class="note"><i class="fas fa-headphones"></i></div>
        <div class="note"><i class="fas fa-play"></i></div>
        <div class="note"><i class="fas fa-volume-up"></i></div>
    </div>
    
    <main class="auth-container">
        <div class="auth-form-container">
            <div class="brand">
                <img src="/assets/Beat.it%20Logo.webp" alt="Beat.it" width="80" height="80">
                <h1>Beat.it</h1>
                <p>Join us in the music revolution! Create your account</p>
            </div>

            <form id="signup-form" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <input type="text" class="form-control" id="first-name-label" name="firstName" required placeholder=" ">
                        <label for="first-name-label" class="form-label">First Name</label>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="last-name-label" name="lastName" placeholder=" ">
                        <label for="last-name-label" class="form-label">Last Name</label>
                    </div>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" id="email-label" name="email" required autocomplete="username" placeholder=" ">
                    <label for="email-label" class="form-label">Email</label>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" id="password-label" name="pass-create" required
                        autocomplete="new-password" placeholder=" ">
                    <label for="password-label" class="form-label">Password</label>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" id="confirm-password-label" name="pass-confirm" required
                        autocomplete="new-password" placeholder=" ">
                    <label for="confirm-password-label" class="form-label">Confirm Password</label>
                </div>

                <button class="btn btn-primary" id="create-account" type="submit">
                    Create Account
                </button>

                <div class="form-footer">
                    <span>Already have an account? <a id="redirect-login">Login</a></span>
                </div>
            </form>
        </div>
    </main>

    <script src="/scripts/utility/loading.js"></script>
    <script src="/scripts/utility/themeUtils.js"></script>

    <script type="module" src="/scripts/handlers/formHandler.js" defer></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Initialize theme
            window.themeUtils.initializeTheme();
            
            // Setup redirect to login
            const redirect = document.getElementById("redirect-login");
            redirect.addEventListener("click", () => {
                window.location.href = "/login";
            });
        });
    </script>
</body>

</html>